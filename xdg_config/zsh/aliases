alias ls='ls --color=auto'
alias lsl='ls -al --color=auto'
alias ..='cd ..'
alias ...='cd ../..'
alias cdg='cd $(git rev-parse --show-toplevel)'

alias v=nvim
# env variables located in .zshenv
alias vw='nvim -c "cd $TMTL_WORK_PATH" -c "Telescope file_browser"'
alias vp='nvim -c "cd $TMTL_PERSONAL_PATH" -c "Telescope file_browser"'
alias vc='nvim -c "cd $TMTL_CONFIG_PATH" -c "Telescope file_browser"'

# git aliases
alias config='git -C $TMTL_CONFIG_PATH'
alias g='git'
alias ga='git add'
alias gaa='git add -A'
alias gb='git branch'
alias gc='git commit -m'
alias gcd='cd `git rev-parse --show-toplevel`'
alias gch='git cherry -v'
alias gco='git checkout'
alias gf='git fetch'
alias gl='git log --all --decorate --oneline --graph'
alias gfod='gf origin dev'
alias gmod='gf origin dev && git merge origin dev'
alias gmos='gf origin staging && git merge origin staging'
alias gpl='git pull'
alias gps='git push'
alias gs='git status'
alias gw='git worktree'
