alias ls='ls --color=auto'
alias lsl='ls -alF --color=auto'
alias ..='cd ..'
alias ...='cd ../..'
alias cdg='cd $(git rev-parse --show-toplevel)'

alias v='nvim -c Oil'
# env variables located in .zshenv
alias vc='nvim -c "cd $TMTL_CONFIG_PATH" -c Oil'
alias vl='nvim -c "normal '\''0"' # open last file edited

# git aliases
alias config='git -C $TMTL_CONFIG_PATH'
alias g='git'
alias ga='git add'
alias gaa='git add -A'
alias gb='git branch'
alias gbs='git bisect start'
alias gbg='git bisect good'
alias gbb='git bisect bad'
alias gbr='git bisect reset'
alias gc='git commit -m'
alias gch='git cherry -v'
alias gco='git checkout'
alias gf='git fetch'
alias gl='git log --all --decorate --oneline --graph'
alias gfod='gf origin dev'
alias gm='git merge'
alias gmod='gf origin dev && git merge origin dev'
alias gmos='gf origin staging && git merge origin staging'
alias gpl='git pull'
alias gps='git push'
alias gs='git status'
alias gw='git worktree'
